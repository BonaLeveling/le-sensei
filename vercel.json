{
  "version": 2,
  "builds": [
    {
      "src": "lesensei/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "lesenseiBack/serveur1.js",
      "use": "@vercel/node"
    },
    {
      "src": "lesenseiBack/serveur2.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/chat-gemini",
      "dest": "/lesenseiBack/serveur1.js"
    },
    {
      "src": "/api/search-anime",
      "dest": "/lesenseiBack/serveur2.js"
    },
    {
      "src": "/(.*)",
      "dest": "/lesensei/dist/index.html"
    }
  ]
}
